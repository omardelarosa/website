// utility
.flex-container
    display flex
.s-border-top
    border-top solid #393939 1px
.s-border-bottom
    border-bottom solid #393939 1px

.header
    .subheading-wrapper
        display flex
        flex-wrap wrap
        height 60px
        .subheading
            text-align left
            margin-top 0
            flex 6 2
        .socials
            margin-top 0
            flex 2 2
    .subheading-nav-wrapper
        margin-bottom 12px

.homepage-heading
    font-family 'Press Start 2P'
    text-align center
    text-transform lowercase
.navigation
    font-family: 'Roboto'
    margin-bottom: 24px
    ol
        padding 0
        margin 0
        justify-content space-between
        list-style-type none
        li
            padding 4px
            margin 0
.subheading
    font-family 'Press Start 2P'
    text-transform lowercase

.footer
    display flex
    justify-content: center

.bio
    padding-top 6px;
    margin-top 20px;
